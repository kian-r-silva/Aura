    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <% if defined?(preselected_song) && preselected_song %>
    <p>Will add: <strong><%= preselected_song.title %></strong> â€” <%= preselected_song.artist %></p>
    <%= hidden_field_tag :song_id, preselected_song.id %>
