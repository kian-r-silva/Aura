<div class="container mt-5">
  <div class="row mb-4">
    <div class="col-md-8">
      <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
          <h1><%= @user.name %></h1>
          <p class="text-muted">@<%= @user.username %></p>
          <div class="mt-2">
            <span class="badge bg-secondary"><%= @user.reviews.count %> reviews</span>
            <span class="badge bg-secondary"><%= @user.followers.count %> followers</span>
            <span class="badge bg-secondary">Following <%= @user.following.count %></span>
          </div>
        </div>
        <div id="follow-btn-<%= @user.id %>">
          <% if current_user.id != @user.id %>
            <% if current_user.following?(@user) %>
              <%= button_to "Following", unfollow_friend_path(@user), method: :delete, class: "btn btn-outline-secondary", title: "Unfollow" %>
            <% else %>
              <%= button_to "Follow", follow_friend_path(@user), method: :post, class: "btn btn-primary", title: "Follow" %>
            <% end %>
          <% else %>
            <p class="text-muted">This is your profile</p>
          <% end %>
        </div>
      </div>
      <%= link_to "← Back to Find Friends", friends_path, class: "btn btn-outline-secondary mb-4" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <h3 class="mb-4">Reviews (<%= @reviews.count %>)</h3>
      
      <% if @reviews.any? %>
        <% @reviews.each do |review| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                  <h5 class="card-title">
                    <%= link_to review.song.title, song_path(review.song), class: "text-decoration-none" %>
                  </h5>
                  <p class="card-text text-muted small">
                    <%= review.song.artist %> <%= review.song.album.present? ? "— #{h(review.song.album)}" : '' %>
                  </p>
                </div>
                <span class="badge bg-warning text-dark">⭐ <%= review.rating %>/5</span>
              </div>
              <p class="card-text"><%= review.comment %></p>
              <small class="text-muted"><%= time_ago_in_words(review.created_at) %> ago</small>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="alert alert-info">
          <%= @user.name %> hasn't written any reviews yet.
        </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-header bg-light">
          <h5 class="mb-0">Followers</h5>
        </div>
        <div class="card-body">
          <% if @user.followers.any? %>
            <div class="list-group list-group-flush">
              <% @user.followers.limit(10).each do |follower| %>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <p class="mb-0 small">
                      <%= link_to follower.name, friend_path(follower), class: "text-decoration-none" %>
                    </p>
                    <p class="mb-0 text-muted small">@<%= follower.username %></p>
                  </div>
                  <% if current_user.id != follower.id %>
                    <div class="ms-2">
                      <% if current_user.following?(follower) %>
                        <%= button_to "✓", unfollow_friend_path(follower), method: :delete, class: "btn btn-sm btn-outline-secondary", title: "Unfollow" %>
                      <% else %>
                        <%= button_to "+", follow_friend_path(follower), method: :post, class: "btn btn-sm btn-primary", title: "Follow" %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <% if @user.followers.count > 10 %>
              <p class="text-muted small mt-3">... and <%= @user.followers.count - 10 %> more</p>
            <% end %>
          <% else %>
            <p class="text-muted mb-0">No followers yet</p>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0">Following</h5>
        </div>
        <div class="card-body">
          <% if @user.following.any? %>
            <div class="list-group list-group-flush">
              <% @user.following.limit(10).each do |following_user| %>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <p class="mb-0 small">
                      <%= link_to following_user.name, friend_path(following_user), class: "text-decoration-none" %>
                    </p>
                    <p class="mb-0 text-muted small">@<%= following_user.username %></p>
                  </div>
                  <% if current_user.id != following_user.id %>
                    <div class="ms-2">
                      <% if current_user.following?(following_user) %>
                        <%= button_to "✓", unfollow_friend_path(following_user), method: :delete, class: "btn btn-sm btn-outline-secondary", title: "Unfollow" %>
                      <% else %>
                        <%= button_to "+", follow_friend_path(following_user), method: :post, class: "btn btn-sm btn-primary", title: "Follow" %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <% if @user.following.count > 10 %>
              <p class="text-muted small mt-3">... and <%= @user.following.count - 10 %> more</p>
            <% end %>
          <% else %>
            <p class="text-muted mb-0">Not following anyone yet</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
