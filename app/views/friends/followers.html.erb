<div class="container mt-5">
  <div class="row mb-4">
    <div class="col-md-8">
      <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
          <h1><%= @user.name %> — Followers</h1>
          <p class="text-muted">@<%= @user.username %></p>
        </div>
      </div>
      <%= link_to "← Back to Profile", user_path(@user), class: "btn btn-outline-secondary mb-4" %>

      <% if @followers.any? %>
        <div class="list-group">
          <% @followers.each do |follower| %>
            <div class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <p class="mb-0 small"><%= link_to follower.name, friend_path(follower), class: "text-decoration-none" %></p>
                <p class="mb-0 text-muted small">@<%= follower.username %></p>
              </div>
              <% if current_user.id != follower.id %>
                <div class="ms-2">
                  <% if current_user.following?(follower) %>
                    <%= button_to "✓", unfollow_friend_path(follower), method: :delete, class: "btn btn-sm btn-outline-secondary", title: "Unfollow" %>
                  <% else %>
                    <%= button_to "+", follow_friend_path(follower), method: :post, class: "btn btn-sm btn-primary", title: "Follow" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info">No followers yet</div>
      <% end %>
    </div>
  </div>
</div>
